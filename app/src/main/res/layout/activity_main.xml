<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suzanne.recipesapp.MainActivity">

    <FrameLayout
        android:id="@+id/master_recipe_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_main_activity_no_network"
        android:background="@color/colorNoNetworkBackground"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_wifi"
            android:layout_gravity="center_vertical|center_horizontal"
            android:tint="@color/colorCardBackground"
            android:layout_marginBottom="50dp"
            android:layout_width="75dp"
            android:layout_height="75dp" />
        <TextView
            android:text="You must be online to load recipes. Please connect to the internet and try again."
            android:textSize="25sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
